<h1>New Game</h1>
<% @letters.each do |l| %>
  <%= l %>
<% end %>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :available_letters, @letters.join %>
  <input type="text" name="word" placeholder="Type the longest word you can find">
  <input type="submit">
</form>
